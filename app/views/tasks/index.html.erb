<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>IsMulti</th>
    <th>Level</th>
    <th>Category</th>
    <th>Map</th>
    <th>Status</th>
    <th>x</th>
    <th>y</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.is_multi %></td>
    <td><%= task.level %></td>
    <td><%= task.category %></td>
    <td><%= task.map_id %></td>
    <td><%= task.status %></td>
    <td><%= task.x %></td>
    <td><%= task.y %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

